<p id="notice"><%= notice %></p>

<h1>Residents</h1>

<table>
  <thead>
    <tr>
      <th>Email</th>
      <th>First name</th>
      <th>Last name</th>
      <th>Zip code</th>
      <th>Last known zip code</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @residents.each do |resident| %>
      <tr>
        <td><%= resident.email %></td>
        <td><%= resident.first_name %></td>
        <td><%= resident.last_name %></td>
        <td><%= resident.zip_code %></td>
        <td><%= resident.last_known_zip_code %></td>
        <td><%= link_to 'Show', resident %></td>
        <td><%= link_to 'Edit', edit_resident_path(resident) %></td>
        <td><%= link_to 'Destroy', resident, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

